<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/userNameItemNot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="26sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/userStatusItemNot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Запрос отправлен"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="90dp"
        >
        <Button
            android:id="@+id/prinyatNot"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="Принять"
            />
        <Button
            android:id="@+id/otklonitNot"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="Отклонить"
            />
        <Button
            android:id="@+id/pereitiVChat"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="Перейти"
            />
        <TextView
            android:id="@+id/zaprosOtpraplen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ожидание ответа"
            android:textSize="22dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

</LinearLayout>